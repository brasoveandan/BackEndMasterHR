<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="domain.Contract" table="Contract">
        <id name="usernameEmployee" column="usernameEmployee"/>
        <property name="companyName" column="companyName"/>
        <property name="grossSalary" type="float" column="grossSalary"/>
        <property name="hireDate" column="hireDate"/>
        <property name="type" column="type">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">domain.enums.ContractType</param>
                <param name="type">12</param>
                <param name="useNamed">true</param>
            </type>
        </property>
        <property name="expirationDate" column="expirationDate"/>
        <property name="department" column="department"/>
        <property name="position" column="position"/>
    </class>

</hibernate-mapping>